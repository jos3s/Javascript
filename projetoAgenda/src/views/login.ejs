<%-  include('includes/head')%>
<%-  include('includes/navbar')%>

<div class="container">
    <div class="row">
      <div class="col-lg-2">

      </div>
      <div class="col-lg-8 my-3">
        <h1 class="text-center"> Criar conta ou Entrar</h1>
        <p class="text-center lead">Faça login ou crie a sua conta</p>
        <div class="row">
          <div class="col-lg my-4">
            Faça o seu cadastro abaixo            
            <form action="/login/register" method="POST">
              <input type="hidden" name="_crsf" value=<%= csrfToken %>>
              <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" name="email">
              </div>
              <div class="form-group">
                <label>Senha</label>
                <input type="password" class="form-control" name="password">
              </div>
              <button type="submit" class="btn btn-primary">Crie a sua conta</button>
            </form>
          </div>

          <div class="col-lg my-4">
            Faça o seu login
            <form action="/login/login" method="POST">
              <input type="hidden" name="_csrf" value=<%= csrfToken %>>
              <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" name="email">
              </div>
              <div class="form-group">
                <label>Senha</label>
                <input type="password" class="form-control" name="password">
              </div>
              <button type="submit" class="btn btn-primary">Login</button>
            </form>
          </div>
        </div>
      <div class="col-lg-2">

      </div>
    </div>
</div>
<%-  include('includes/footer')%>

    